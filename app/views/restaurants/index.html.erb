<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h1><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <h3><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
    <h2><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    <h3><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
      <% restaurant.reviews.each do |review| %>
      <br><%= review.thoughts %><br>
      <h3><%= link_to "Endorse Review", review_endorsements_path(review), method: :post %>
      <h3><%="Average rating: #{star_rating(restaurant.average_rating)}"%>
      <p><%= pluralize review.endorsements.count, 'endorsement' %></p>
      <% end %>
  <% end %>
<% else %>
    <h1>No restaurants yet</h1>
  <% end %>
<br><a href="restaurants/new">Add a restaurant</a></br>
